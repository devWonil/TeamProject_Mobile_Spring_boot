<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/searchBookImageView"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/sample_book_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/searchBookTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchBookTitle"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:fontFamily="@font/nanum_square"
        android:text="책 제목"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/searchBookAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchBookImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/searchBookAuthor"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/nanum_square"
        android:text="작가이름"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/searchBookTitle"
        app:layout_constraintTop_toBottomOf="@id/searchBookTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>